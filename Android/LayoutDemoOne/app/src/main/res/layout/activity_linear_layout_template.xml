<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demoone.LinearLayoutTemplate"
    android:padding="20dp"
    android:background="@color/material_dynamic_secondary70"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/material_dynamic_secondary10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:background="@color/material_dynamic_tertiary20"
            >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="250px"
        android:background="@color/material_dynamic_tertiary90"
        android:layout_marginBottom="10dp"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:background="@color/material_dynamic_primary95"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="90dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:background="@drawable/box1"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="100dp"
            android:layout_gravity="center"
            android:background="@drawable/box2"
            >
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/material_dynamic_neutral_variant80"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:background="@drawable/icon1"
            >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/icon2"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            android:background="@drawable/icon2"

            >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal"
            android:background="@drawable/icon3"
            >

        </LinearLayout>
    </LinearLayout>


</LinearLayout>