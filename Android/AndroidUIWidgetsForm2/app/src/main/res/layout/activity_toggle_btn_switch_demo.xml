<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToggleBtnSwitchDemo"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ToggleButton
        android:id="@+id/wifi_toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Wifi Enabled"
        android:textOff="Wifi Disabled"
        android:onClick="getValueFromToggleBtn"
        android:background="#EAA79B"
        android:padding="10dp"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getValueFromSwitch"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Wifi: "
        android:id="@+id/wifi_switch"
        />

</LinearLayout>